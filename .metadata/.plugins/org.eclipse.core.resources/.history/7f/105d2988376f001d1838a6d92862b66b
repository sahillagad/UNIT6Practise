<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="studentUnit" >  //name you can change  


<properties>
           
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ratandb" />      //here database name is  ratandb you can give your data base name
            <property name="javax.persistence.jdbc.user" value="root" />                                  // here we write the username 
            <property name="javax.persistence.jdbc.password" value="root" />                             // here we write our password 
  <property name="hibernate.show_sql" value="true"/>
 <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>

    </persistence-unit>
</persistence>


